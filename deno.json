{
  "tasks": {
    "act": "act -j integration --matrix os:ubuntu-latest",
    "cache": "deno cache main.ts",
    "run": "deno run --no-prompt --allow-env --allow-read --allow-write --allow-net main.ts",
    "test": "deno test --allow-read --allow-write=. --allow-net=jsr.io,registry.npmjs.org,deno.land --allow-run=deno"
  },
  "imports": {
    "@actions/core": "npm:@actions/core@^1.10.1",
    "@actions/github": "npm:@actions/github@^6.0.0",
    "@molt/core": "jsr:@molt/core@^0.18.1",
    "@molt/integration": "jsr:@molt/integration@^0.18.0",
    "@std/assert": "jsr:@std/assert@^0.223.0",
    "@std/collections": "jsr:@std/collections@^0.223.0",
    "@std/path": "jsr:@std/path@^0.223.0",
    "@std/testing": "jsr:@std/testing@^0.223.0"
  }
}
